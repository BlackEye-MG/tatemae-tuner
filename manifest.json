{
    "manifest_version": 3,
    "name": "Tatemae Lens / 建前レンズ",
    "version": "1.2.0",
    "description": "Decode hidden meanings and tune your tone while browsing. ブラウザ上の本音と建前を変換します。",
    "permissions": [
        "storage",
        "contextMenus",
        "sidePanel",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "action": {
        "default_title": "Tatemae Tuner",
        "default_popup": "src/popup/index.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.ts"
            ]
        }
    ]
}